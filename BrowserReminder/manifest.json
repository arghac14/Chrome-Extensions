{
    "manifest_version": 2,
  
    "name": "BrowserReminder",
    "description": "This extension provides a periodic desktop reminder",
    "version": "1.0",
  
    "background": {
      "scripts" : ["popup.js"]
    },
  
    "browser_action": {
      "default_icon": "./images/icon1.png"
    },
  
    "permissions": [
      "notifications",
      "alarms"
    ]
  }